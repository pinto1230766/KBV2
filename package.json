{
  "name": "kbv-lyon",
  "version": "1.20.1",
  "description": "Application de gestion des orateurs visiteurs - KBV DV Lyon",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "build:stats": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "build:prod": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:update": "vitest run -u",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev:full": "concurrently \"npm run dev\" \"npm run storybook\"",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build"
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/local-notifications": "^5.0.0",
    "@capacitor/preferences": "^5.0.0",
    "@capacitor/share": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.8",
    "@react-aria/focus": "^3.21.2",
    "@react-aria/live-announcer": "^3.4.4",
    "@sentry/react": "^10.29.0",
    "@tanstack/react-query": "^5.90.12",
    "@use-gesture/react": "^10.3.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "idb": "^7.1.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^5.2.1",
    "react-router-dom": "^7.10.0",
    "react-to-print": "^3.2.0",
    "react-window": "^2.2.3",
    "react-window-infinite-loader": "^2.0.0",
    "recharts": "^2.10.0",
    "swr": "^2.3.7",
    "tailwind-merge": "^3.4.0",
    "uuid": "^9.0.1",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.0.0",
    "@playwright/test": "^1.40.0",
    "@storybook/react": "^10.1.7",
    "@storybook/react-vite": "^10.1.7",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.50.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}
